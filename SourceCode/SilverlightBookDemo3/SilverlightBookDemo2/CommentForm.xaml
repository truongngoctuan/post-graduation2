<UserControl x:Class="SilverlightBookDemo2.CommentForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="180"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Tên của bạn" Grid.Column="0" Grid.Row="0"></TextBlock>
        <TextBox x:Name="tbName" Width="300" Height="30" Grid.Column="1" Grid.Row="0"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1">Bình luận: </TextBlock>
        <TextBox x:Name="tbComment" Width="350" Height="150" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></TextBox>
        <Button Width="100" Height="25" Content="Submit" Click="Button_Click" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"></Button>
    </Grid>
</UserControl>
