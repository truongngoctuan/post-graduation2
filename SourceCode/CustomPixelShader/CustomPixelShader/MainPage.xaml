<UserControl x:Class="CustomPixelShader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
             xmlns:effects="clr-namespace:CustomPixelShader.Effects">

    <Grid x:Name="LayoutRoot" Background="White">
        <Image Source="Images/ko thanks.png" Width="500" Height="500">
            <Image.Effect>
                <!-- you can ignore all variable (they all have their own default value) when using this effect-->
                <effects:GutterBookEffect Center="0.3" Dark="0.3" Darker="0.3" Darkest="0.7"></effects:GutterBookEffect>
                <!--<effects:AmbientEffect Amplitude="0.5"></effects:AmbientEffect>-->
            </Image.Effect>
        </Image>
    </Grid>
</UserControl>
