<UserControl x:Class="PageFlip.Animation.UISliderR.AnimationUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas x:Name="LayoutRoot" >
        <Canvas.Resources>
            <Storyboard x:Name="leftStoryboard">
                <DoubleAnimation Storyboard.TargetName="container" Duration="00:00:00.1"
                 Storyboard.TargetProperty="Canvas.RenderTransform.TranslateTransform.X"
                 x:Name="translateLeft"/>
            </Storyboard>
            <Storyboard x:Name="rightStoryboard">
                <DoubleAnimation Storyboard.TargetName="container" Duration="00:00:00.1"
                 Storyboard.TargetProperty="Canvas.RenderTransform.TranslateTransform.X"
                 x:Name="translateRight"/>
            </Storyboard>
        </Canvas.Resources>
        <Canvas x:Name="container">
            <Canvas.RenderTransform>
                <TranslateTransform X="0" Y="0"/>
            </Canvas.RenderTransform>
            <Canvas x:Name="content" >
            </Canvas>
        </Canvas>
    </Canvas>
</UserControl>
